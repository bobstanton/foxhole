{
  "_README": {
    "description": "Foxhole - Firefox Enterprise Policies for privacy hardening",
    "installation": {
      "linux": "sudo cp policies.json /usr/lib/firefox/distribution/policies.json",
      "linux_alt": "sudo cp policies.json /usr/lib64/firefox/distribution/policies.json",
      "flatpak": "mkdir -p ~/.var/app/org.mozilla.firefox/current/active/files/lib/firefox/distribution && cp policies.json ~/.var/app/org.mozilla.firefox/current/active/files/lib/firefox/distribution/policies.json",
      "macos": "sudo cp policies.json /Applications/Firefox.app/Contents/Resources/distribution/policies.json",
      "windows": "copy policies.json \"C:\\Program Files\\Mozilla Firefox\\distribution\\policies.json\""
    },
    "verify": "Restart Firefox and visit about:policies to confirm policies are active",
    "note": "You may need to create the 'distribution' folder if it doesn't exist"
  },
  "policies": {
    "DisableTelemetry": true,
    "DisableFeedbackCommands": true,
    "DisableFirefoxStudies": true,
    "DisableFirefoxAccounts": true,
    "DisablePocket": true,
    "DisableSetDesktopBackground": true,
    "DontCheckDefaultBrowser": true,
    "CaptivePortal": false,
    "HttpsOnlyMode": "enabled",
    "GenerativeAI": {
      "Enabled": false
    },
    "NoDefaultBookmarks": true,
    "OfferToSaveLogins": false,
    "PasswordManagerEnabled": false,
    "OverrideFirstRunPage": "",
    "OverridePostUpdatePage": "",
    "RequestedLocales": ["en-US"],
    "EnableTrackingProtection": {
      "Value": true,
      "Locked": true,
      "Cryptomining": true,
      "Fingerprinting": true
    },
    "FirefoxHome": {
      "Search": false,
      "TopSites": false,
      "SponsoredTopSites": false,
      "Highlights": false,
      "Pocket": false,
      "SponsoredPocket": false,
      "Snippets": false,
      "Locked": true
    },
    "UserMessaging": {
      "WhatsNew": false,
      "ExtensionRecommendations": false,
      "FeatureRecommendations": false,
      "UrlbarInterventions": false,
      "SkipOnboarding": true,
      "MoreFromMozilla": false,
      "FirefoxLabs": false,
      "Locked": true
    },
    "DisableFormHistory": true,
    "NetworkPrediction": false,
    "PopupBlocking": {
      "Default": true,
      "Locked": true
    },
    "Permissions": {
      "Camera": {
        "BlockNewRequests": false,
        "Locked": false
      },
      "Microphone": {
        "BlockNewRequests": false,
        "Locked": false
      },
      "Location": {
        "BlockNewRequests": true,
        "Locked": true
      },
      "Notifications": {
        "BlockNewRequests": true,
        "Locked": false
      },
      "Autoplay": {
        "Default": "block-audio-video",
        "Locked": true
      }
    },
    "ExtensionSettings": {
      "*": {
        "allowed_private_browsing": true
      },
      "uBlock0@raymondhill.net": {
        "installation_mode": "normal_installed",
        "install_url": "https://addons.mozilla.org/firefox/downloads/latest/ublock-origin/latest.xpi"
      },
      "@testpilot-containers": {
        "installation_mode": "normal_installed",
        "install_url": "https://addons.mozilla.org/firefox/downloads/latest/multi-account-containers/latest.xpi"
      },
      "{74145f27-f039-47ce-a470-a662b129930a}": {
        "installation_mode": "normal_installed",
        "install_url": "https://addons.mozilla.org/firefox/downloads/latest/clearurls/latest.xpi"
      },
      "search@kagi.com": {
        "installation_mode": "normal_installed",
        "install_url": "https://addons.mozilla.org/firefox/downloads/latest/kagi-search-for-firefox/latest.xpi"
      },
      "sponsorBlocker@ajay.app": {
        "installation_mode": "normal_installed",
        "install_url": "https://addons.mozilla.org/firefox/downloads/latest/sponsorblock/latest.xpi"
      },
      "{d634138d-c276-4fc8-924b-40a0ea21d284}": {
        "installation_mode": "normal_installed",
        "install_url": "https://addons.mozilla.org/firefox/downloads/latest/1password-x-password-manager/latest.xpi"
      }
    },
    "SearchEngines": {
      "Remove": [
        "Google",
        "Bing",
        "Amazon.com",
        "DuckDuckGo",
        "eBay",
        "Twitter",
        "Perplexity",
        "Wikipedia (en)"
      ],
      "Add": [
        {
          "Name": "Kagi",
          "URLTemplate": "https://kagi.com/search?q={searchTerms}",
          "Method": "GET",
          "IconURL": "https://kagi.com/favicon.ico",
          "Alias": "@k",
          "Description": "Kagi Search",
          "SuggestURLTemplate": "https://kagi.com/api/autosuggest?q={searchTerms}"
        }
      ],
      "Default": "Kagi",
      "PreventInstalls": false
    },
    "SearchBar": "unified"
  }
}
